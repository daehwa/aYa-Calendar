<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:orientation="vertical"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.wdullaer.materialdatetimepicker.MainActivity"
android:gravity="center_vertical|center_horizontal"
android:background="#ffffff">
<EditText
    android:id="@+id/titleSchedule"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:hint="일 정 이 름"
    android:gravity="center"
    android:padding="12dp"
    android:inputType="textVisiblePassword|textShortMessage"
    android:layout_marginBottom="10dp"/>

<CheckBox
    android:id="@+id/everyWeek"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="매주"
    android:layout_gravity="left"/>
<LinearLayout
    android:id="@+id/weekBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="invisible">
    <CheckBox
        android:id="@+id/Mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"/>
    <CheckBox
        android:id="@+id/Tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화"/>
    <CheckBox
        android:id="@+id/Wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수"/>
    <CheckBox
        android:id="@+id/Thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목"/>
    <CheckBox
        android:id="@+id/Fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금"/>
    <CheckBox
        android:id="@+id/Sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="토"/>
    <CheckBox
        android:id="@+id/Sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <ImageButton
        android:id="@+id/date_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/date"/>
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_date"
        android:layout_marginTop="10dp" />
</LinearLayout>
<CheckBox
    android:id="@+id/allDay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:text="하루종일"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <ImageButton
        android:id="@+id/time_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/time"/>
    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_time"
        android:layout_marginTop="10dp" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/OKBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="OK"
        android:textColor="#ff308dd2"
        android:background="@android:color/transparent" />

</LinearLayout>
</LinearLayout>