<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/dateSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날 짜 범 위 설 정"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="#ff2b79b4"/>
        <ListView
            android:id="@+id/friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <com.borax12.materialdaterangepicker.floatingactionbutton.FloatingActionButton
        android:id="@+id/findTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/find"
        fab:fab_colorNormal="#ff308dd2"
        fab:fab_colorPressed="#ff2b79b4"/>
</FrameLayout>